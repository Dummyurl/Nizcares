<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp">

    <LinearLayout
        android:id="@+id/llRecieve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="100dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:layout_marginLeft="10dp"
        android:visibility="gone">

        <com.indglobal.nizcare.commons.fonts.TextRegular
            android:id="@+id/tvRMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lightBlack"
            android:textSize="13sp"
            android:text="Dear Amit Kumar Yadav,You have already experienced the best of what we offer as India's No.1*  Bank. Now begin your journey by opening a SavingsMax Account, your gateway to a whole new world of banking."/>

        <com.indglobal.nizcare.commons.fonts.TextRegular
            android:id="@+id/tvRTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/fullGray"
            android:textSize="12sp"
            android:text="12:00 PM"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:background="@color/lightGreen"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:visibility="gone">

        <com.indglobal.nizcare.commons.fonts.TextRegular
            android:id="@+id/tvSMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:text="Dear Amit Kumar Yadav,You have already experienced the best of what we offer as India's No.1*  Bank. Now begin your journey by opening a SavingsMax Account, your gateway to a whole new world of banking."/>

        <com.indglobal.nizcare.commons.fonts.TextRegular
            android:id="@+id/tvSTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:text="12:00 PM"
            android:layout_marginTop="10dp"/>

    </LinearLayout>


</RelativeLayout>