<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_margin="30dp"
    app:cardBackgroundColor="@color/lightGreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/round_fill_white_top"
            android:layout_marginTop="7dp"
            android:padding="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.indglobal.nizcare.commons.fonts.TextRegular
                        android:id="@+id/tvPName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shane Colon"
                        android:textSize="15sp"
                        android:textColor="@color/lightBlack"
                        android:layout_gravity="center_vertical"/>

                    <com.indglobal.nizcare.commons.fonts.TextRegular
                        android:id="@+id/tvGndrAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male * 35 Years old"
                        android:textSize="14sp"
                        android:textColor="@color/fullGray"
                        android:layout_marginTop="5dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:id="@+id/ivChat"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="14dp"
                        android:src="@drawable/ic_message_mini"/>

                    <ImageView
                        android:id="@+id/ivCall"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="12dp"
                        android:src="@drawable/ic_call_b"/>

                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/fullGray"
                android:layout_marginTop="10dp"/>

            <com.indglobal.nizcare.commons.fonts.TextRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/clinic"
                android:textSize="14sp"
                android:textColor="@color/fullGray"
                android:layout_marginTop="15dp"/>

            <com.indglobal.nizcare.commons.fonts.TextRegular
                android:id="@+id/tvHName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Olivers health clinic"
                android:textSize="15sp"
                android:textColor="@color/lightBlack"
                android:layout_gravity="center_vertical"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.indglobal.nizcare.commons.fonts.TextRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/timeslot"
                        android:textSize="14sp"
                        android:textColor="@color/fullGray"/>

                    <com.indglobal.nizcare.commons.fonts.TextRegular
                        android:id="@+id/tvTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11:30 am"
                        android:textSize="15sp"
                        android:textColor="@color/lightBlack"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp">

                    <com.indglobal.nizcare.commons.fonts.TextRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/date"
                        android:textSize="14sp"
                        android:textColor="@color/fullGray"/>

                    <com.indglobal.nizcare.commons.fonts.TextRegular
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today, May 12"
                        android:textSize="15sp"
                        android:textColor="@color/lightBlack"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>

            </RelativeLayout>


            <com.indglobal.nizcare.commons.RippleView
                android:id="@+id/rplReschdule"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="25dp"
                app:rv_centered="true"
                app:rv_color="@color/lightGray">

                <com.indglobal.nizcare.commons.fonts.TextRegular
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_fill_yellow"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:text="@string/reschduleapoint"/>

            </com.indglobal.nizcare.commons.RippleView>

            <com.indglobal.nizcare.commons.RippleView
                android:id="@+id/rplCancel"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                app:rv_centered="true"
                app:rv_color="@color/lightGray">

                <com.indglobal.nizcare.commons.fonts.TextRegular
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_stroke_yellow"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:text="@string/cancelapoint"/>

            </com.indglobal.nizcare.commons.RippleView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>