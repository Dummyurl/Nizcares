<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.indglobal.nizcare.commons.fonts.TextRegular
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acne Removal"
            android:textSize="15sp"
            android:textColor="@color/lightBlack"
            android:layout_gravity="center_vertical"
            android:maxLines="1"
            android:ellipsize="end"/>

        <com.indglobal.nizcare.commons.fonts.TextRegular
            android:id="@+id/tvDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 days"
            android:textSize="13sp"
            android:textColor="@color/fullGray"
            android:layout_gravity="center_vertical"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <com.indglobal.nizcare.commons.fonts.TextRegular
        android:id="@+id/tvDescrptn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I have had acene related problems from a long time. i wish to get rid of them permanently. Please help!"
        android:textSize="13sp"
        android:maxLines="3"
        android:ellipsize="end"
        android:textColor="@color/fullGray"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <com.indglobal.nizcare.commons.fonts.TextRegular
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jeff Tate"
                android:textSize="14sp"
                android:textColor="@color/lightBlack"
                android:layout_gravity="center_vertical"
                android:maxLines="1"
                android:ellipsize="end"/>

            <com.indglobal.nizcare.commons.fonts.TextRegular
                android:id="@+id/tvGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male * 25 Years old"
                android:textSize="13sp"
                android:textColor="@color/fullGray"
                android:layout_gravity="center_vertical"
                android:maxLines="1"
                android:ellipsize="end"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">

            <com.indglobal.nizcare.commons.RippleView
                android:id="@+id/rplReply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:rv_centered="true"
                app:rv_color="@color/lightGray"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/ivReply"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_message_mini"
                    android:layout_centerVertical="true"/>

                <com.indglobal.nizcare.commons.fonts.TextRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reply"
                    android:textSize="13sp"
                    android:textColor="@color/fullGray"
                    android:layout_gravity="center_vertical"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_toRightOf="@+id/ivReply"
                    android:layout_marginLeft="6dp"
                    android:layout_centerVertical="true"/>

            </com.indglobal.nizcare.commons.RippleView>

            <com.indglobal.nizcare.commons.RippleView
                android:id="@+id/rplCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:rv_centered="true"
                app:rv_color="@color/lightGray"
                android:padding="5dp"
                android:layout_marginLeft="5dp">

                <ImageView
                    android:id="@+id/ivCall"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_call_b"
                    android:layout_centerVertical="true"/>

                <com.indglobal.nizcare.commons.fonts.TextRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call"
                    android:textSize="13sp"
                    android:textColor="@color/fullGray"
                    android:layout_gravity="center_vertical"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_toRightOf="@+id/ivCall"
                    android:layout_marginLeft="6dp"
                    android:layout_centerVertical="true"/>

            </com.indglobal.nizcare.commons.RippleView>

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lightGray"
        android:layout_marginTop="10dp"/>

</LinearLayout>