<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/overlay_gray_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toLeftOf="@+id/llEduEdit"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp">

        <com.indglobal.nizcare.commons.fonts.TextRegular
            android:id="@+id/tvDegree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/lightBlack"
            android:text="M.D. Human Nutirtion"/>

        <com.indglobal.nizcare.commons.fonts.TextRegular
            android:id="@+id/tvCollege"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/fullGray"
            android:text="Gandhi medical college, Hyderabad"
            android:layout_marginTop="5dp"/>

        <com.indglobal.nizcare.commons.fonts.TextRegular
            android:id="@+id/tvYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/fullGray"
            android:text="2012"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llEduEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="7dp">

        <ImageView
            android:id="@+id/ivCertificate"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/round_fill_gray"
            android:src="@drawable/ic_camera_b"
            android:scaleType="center"
            android:layout_gravity="center_horizontal"/>

        <com.indglobal.nizcare.commons.fonts.TextRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/lightGreen"
            android:text="@string/edit"
            android:paddingBottom="7dp"
            android:paddingLeft="5dp"
            android:paddingRight="7dp"
            android:paddingTop="3dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</RelativeLayout>